<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/discount_card_background" />

        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Shop Name"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvShopAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="80dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Shop Address"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="125dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Customer Name"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCustomerPhone"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="125dp"
            android:layout_toEndOf="@+id/tvCustomerName"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="+917218144612"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="190dp"
            android:layout_marginTop="230dp"
            android:fontFamily="@font/allura"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="30"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/tvDiscount"
            android:fontFamily="@font/alex_brush"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="%  Discount"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:padding="10dp">

        <Button
            android:id="@+id/SHowCardsBTN"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/button_gradiant"
            android:text="Show cards"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>