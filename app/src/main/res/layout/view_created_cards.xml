<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".TransactionResultActivity"
    android:orientation="horizontal"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_view_background"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout">

                <RelativeLayout
                    android:layout_width="255dp"
                    android:layout_height="120dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/CustomerName"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:text="Customer Name"
                        android:textColor="@color/darkBlue"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/CustomerNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/CustomerName"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center_vertical"
                        android:text="1234567890"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/Discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="33dp"
                        android:layout_toEndOf="@+id/CustomerNumber"
                        android:layout_toRightOf="@+id/CustomerName"
                        android:gravity="center_vertical"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:text="00"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textColor="#FB5656"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Discount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="35dp"
                        android:layout_toEndOf="@+id/Discount"
                        android:layout_toRightOf="@+id/Discount"
                        android:fontFamily="@font/allura"
                        android:gravity="center_vertical"
                        android:minHeight="?android:attr/listPreferredItemHeightSmall"
                        android:text="% "
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceListItemSmall"
                        android:textSize="25dp" />

                </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/linearLayout"
                android:layout_gravity="center|left"
                android:gravity="left"
                android:orientation="vertical"
                android:foregroundGravity="center">

                <Button
                    android:id="@+id/editBTN"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_button"
                    android:text="Edit"
                    android:layout_gravity="center"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/deleteBTN"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/editBTN"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_button"
                    android:text="Delete"
                    android:layout_gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>