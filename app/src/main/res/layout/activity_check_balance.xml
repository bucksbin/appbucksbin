<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CheckBalanceActivity">

    <include layout="@layout/comon_toolbar_layout"/>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@style/AVLoadingIndicatorView"
        android:visibility="visible"
        app:indicatorName="BallPulseIndicator"
        app:indicatorColor="@color/colorPrimary"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/co_ordinatorLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <LinearLayout
               android:id="@+id/mainBalanceCard"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:layout_marginTop="30dp"
               android:gravity="center"
               android:padding="10dp"
               android:background="@drawable/balance_card_bg">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center|start"
                   app:srcCompat="@drawable/main_balance_icon"/>
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="start|center"
                   android:layout_marginLeft="20dp"
                   android:padding="10dp"
                   android:gravity="start">

                   <TextView
                       android:id="@+id/mainBalanceText"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Main Balance"
                       android:textStyle="bold"
                       android:textColor="@color/darkBlue"
                       android:fontFamily="@font/beirut"
                       android:textSize="35sp"
                       android:layout_centerHorizontal="true"/>

                   <TextView
                       android:id="@+id/mainBalance"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/mainBalanceText"
                       android:textStyle="bold"
                       android:autoSizeTextType="uniform"
                       android:autoSizeMinTextSize="20sp"
                       android:autoSizeMaxTextSize="25sp"
                       android:textSize="25sp"

                       android:textColor="@color/darkBlue"
                       android:text=""/>

               </RelativeLayout>

           </LinearLayout>

            <RelativeLayout
                android:id="@+id/pagerLayout"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@id/mainBalanceCard"
                android:layout_marginTop="?attr/actionBarSize">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:background="@color/grey_text" />

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/pagerLayout"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/balance_card_bg">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    app:srcCompat="@drawable/fixed_balance_icon"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:gravity="start">

                    <TextView
                        android:id="@+id/fixedBalanceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fixed Balance"
                        android:textStyle="bold"
                        android:textColor="@color/darkBlue"
                        android:fontFamily="@font/beirut"
                        android:textSize="35sp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/fixedBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fixedBalanceText"
                        android:textStyle="bold"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeMaxTextSize="25sp"
                        android:textSize="25sp"
                        android:textColor="@color/darkBlue"
                        android:text=""/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>